pipeline {
    agent any

    environment {
        NODE_VERSION = "20.x"
    }

    tools {
        nodejs "${NODE_VERSION}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "main", url: "https://github.com/SIvanov123/Student-Registry-App-Demo"
            }
        }

        stage("Install dependencies") {
            steps {
                script {
                    if (isUnix()) {
                        sh "npm install"
                    } else {
                        bat "npm install"
                    }
                }
            }
        }

        stage("Run app") {
            steps {
                script {
                    bat "npm start &"                       
                    bat "wait-on http://localhost:8090"    
                    bat "npm test"                         
                }
            }
        }
    }

    post {
        always {
            echo "CI pipeline completed"    
        }
    }
}
