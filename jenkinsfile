pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: "main", url: "https://github.com/SIvanov123/Student-Registry-App-Demo"
            }
        }

        stage("Install dependencies") {
            steps {
                script {
                    if (isUnix()) {
                        sh "npm install"
                    } else {
                        bat "npm install"
                    }
                }
            }
        }

        stage("Run app") {
            steps {
                script {
                    if (isUnix()) {
                        sh "npm start &"
                    } else {
                        bat "start /B npm start"
                    }                
                }
            }
        }

        stage("Run test") {
            steps {
                script {
                    if (isUnix()) {
                        sh "npm test"
                    } else {
                        bat "npm test"
                    }
                }
            }
        }
    }

    post {
        always {
            echo "CI pipeline completed"
        }
    }
}
